<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con deporte -->
        <TextView
            android:id="@+id/txtDeporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GYM"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:background="@drawable/sport_tag_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_marginBottom="8dp" />

        <!-- Nombre de la rutina -->
        <TextView
            android:id="@+id/txtNombreRutina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pecho y Hombros"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <!-- Información de duración y calorías -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_clock"
                    android:tint="@color/text_secondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/txtDuracion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 min"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_fire"
                    android:tint="@color/text_secondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/txtCalorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="280 kcal"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Descripción -->
        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rutina enfocada en el desarrollo del pecho y hombros"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnVerDetalles"
                style="@style/Widget.CoachPrueba.Button.Outline"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Ver detalles"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp" />

            <Button
                android:id="@+id/btnActivar"
                style="@style/Widget.CoachPrueba.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Activar"
                android:textSize="12sp"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
